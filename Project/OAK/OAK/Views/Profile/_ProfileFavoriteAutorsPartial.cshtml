@model Autor

<div class="liked liked_some_profile">
    <a class="a_botton" asp-action="FavoriteAutors" asp-controller="Autors" asp-route-id="@Model.Id">
        <p class="liked_title">Избранные авторы:</p>
    </a>

    @{
        var autors = Model.FavAutorIdautororiginNavigations.Take(4);
        foreach (var item in autors)
        {
            Autor a = item.IdautorfavoriteNavigation;

            <a class="a_botton" asp-action="Autor" asp-controller="Autor" asp-route-id="@a.Id">
                <div class="liked_autor">
                    @Html.Raw("<img class='liked_autor_img' " +
                    "src=\"data:image/png; base64," + Convert.ToBase64String(a.Avatar) + "\" />")
                    <p class="liked_autor_name">@a.Name</p>
                </div>
            </a>
        }
    }

    <a class="a_botton" asp-action="FavoriteAutors" asp-controller="Autors" asp-route-id="@Model.Id">
        <p class="recomended_dots">. . .</p>
    </a>
</div>