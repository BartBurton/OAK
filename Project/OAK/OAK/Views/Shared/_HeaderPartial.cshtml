<header>
    <a asp-controller="Articles" asp-action="Articles">
        <img class="header_oak_icon" src="~/icons/oak.png">
        <div class="header_oak_name">ДУБ</div>
    </a>

    <a asp-controller="Sections" asp-action="Sections">
        <div class="header_branch_name">Ветви</div>
        <img class="header_branch_icon" src="~/icons/branch.png">
    </a>

    <a asp-controller="Profile" asp-action="Profile">
        @if (ViewBag.CurrentUser != null)
        {
            @Html.Raw("<img class='header_profile' " +
            "src=\"data:image/png; base64," + Convert.ToBase64String(ViewBag.CurrentUser.Avatar) + "\" />")
        }
        else
        {
            <img class="header_profile" src="~/icons/acorn.png">
        }
    </a>

    @if (ViewBag.CurrentUser != null)
    {
        <a asp-controller="Articles" asp-action="NewsArticleseFromFavorite"
           asp-route-id="ViewBag.CurrentUser.Id">
            <img class="header_favorite" src="~/icons/leaf.png">
        </a>
    }
    else
    {
        <a asp-controller="Login" asp-action="SignIn">
            <img class="header_favorite" src="~/icons/leaf.png">
        </a>
    }
</header>