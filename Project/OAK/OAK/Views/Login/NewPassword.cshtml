@model OAK.Models.Login.NewPasswordModel

@{
    Layout = "_LayoutLogin";
}

<form class="sign_form" asp-action="NewPassword" asp-controller="Login" method="post">

    <br>
    <label asp-for="Email">Электронная почта</label>
    <br>
    <input class="sign_input" asp-for="Email">
    <br>
    <span asp-validation-for="Email"></span>
    <br>

    <br>
    <label asp-for="Password">Новый пароль</label>
    <br>
    <input class="sign_input" asp-for="Password">
    <br>
    <span asp-validation-for="Password"></span>
    <br>

    <br>
    <label asp-for="ConfirmPassword">Повтор нового пароля</label>
    <br>
    <input class="sign_input" asp-for="ConfirmPassword">
    <br>
    <span asp-validation-for="ConfirmPassword"></span>
    <br>

    <br>
    <button class="standart_buttom" type="submit">Войти с новым паролем</button>
    <br>
    <br>

    <p>
        <a class="forgot" asp-action="SignIn" asp-controller="Login">
            Войти
        </a>
    </p>
    <br>

    <p>
        <a class="forgot" asp-action="Registration" asp-controller="Login">
            Регистрация
        </a>
    </p>
    <br>

</form>