@model OAK.Models.Login.NewPasswordModel
@{
    Layout = "_LayoutLogin";
}

<form class="sign_form" asp-controller="Login" asp-action="NewPassword" method="post">

    <br>
    <label asp-for="Email">Электронная почта</label>
    <br>
    <input class="sign_input" asp-for="Email">
    <br>
    <span asp-validation-for="Email"></span>
    <br>

    <br>
    <label asp-for="Password">Новый пароль</label>
    <br>
    <input class="sign_input" asp-for="Password">
    <br>
    <span asp-validation-for="Password"></span>
    <br>

    <br>
    <label asp-for="ConfirmPassword">Повтор нового пароля</label>
    <br>
    <input class="sign_input" asp-for="ConfirmPassword">
    <br>
    <span asp-validation-for="ConfirmPassword"></span>
    <br>

    <br>
    <button class="standart_buttom" type="submit">Войти с новым паролем</button>
    <br>
    <br>


    <a class="forgot" asp-controller="Login" asp-action="SignUp">Регистрация</a>
    <br>
    <br>
    <a class="forgot" asp-controller="Login" asp-action="SignIn">Войти</a>
    <br>
    <br>
    <a class="forgot" asp-controller="Articles" asp-action="News">Доступ без входа</a>
    <br>
    <br>

</form>