@model OAK.Models.Login.SignUpModel
@{
    Layout = "_LayoutLogin";
}

<form class="sign_form" asp-controller="Login" asp-action="SignUp" method="post">

    <br>
    <label asp-for="Name">Псевдоним</label>
    <br>
    <input class="sign_input" asp-for="Name">
    <br>
    <span asp-validation-for="Name"></span>
    <br>

    <br>
    <label asp-for="Email">Электронная почта</label>
    <br>
    <input class="sign_input" asp-for="Email">
    <br>
    <span asp-validation-for="Email"></span>
    <br>

    <br>
    <label asp-for="Password">Пароль</label>
    <br>
    <input class="sign_input" asp-for="Password">
    <br>
    <span asp-validation-for="Password"></span>
    <br>

    <br>
    <label asp-for="ConfirmPassword">Повтор пароля</label>
    <br>
    <input class="sign_input" asp-for="ConfirmPassword">
    <br>
    <span asp-validation-for="ConfirmPassword"></span>
    <br>


    <br>
    <button class="standart_buttom" type="submit">Зарегистрироваться</button>
    <br>
    <br>


    <a class="forgot" asp-controller="Login" asp-action="SignIn">Войти</a>
    <br>
    <br>
    <a class="forgot" asp-controller="Articles" asp-action="News">Доступ без входа</a>
    <br>
    <br>

</form>